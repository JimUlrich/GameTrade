@model Tuple<IEnumerable<Game>, string>

<table class="table table-striped table-hover table-bordered">

    <tr>
        <th>Title</th>
        <th>Platform</th>
        <th>Year</th>
        <th>GameCondition</th>
        <th>Value</th>
        <th>Buy/Sell </th>
        <th> </th>
        <th> </th>

    </tr>

    @foreach (var game in Model.Item1)
    {
        <tr>
            <td>@game.Title</td>
            <td>@game.System</td>
            <td>@game.Year</td>
            <td>@game.GameCondition</td>
            <td>$@game.Value</td>
            <td>@game.Designation</td>

           
            <td><a asp-controller="List" class="btn btn-primary" asp-action="Edit" asp-route-id="@game.GameId">Edit</a></td>
            <td><a asp-controller="List" class="btn btn-primary" asp-action="Game" asp-route-id="@game.GameId">View Game Info</a></td>
            
        </tr>
    }
</table>
