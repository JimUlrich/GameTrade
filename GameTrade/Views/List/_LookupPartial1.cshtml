@model GameTrade.ViewModels.LookupByTitleViewModel

<div class="form-group">
    <label asp-for="Title" class="col-lg-2"></label>
    <div class="col-lg-10">
        <input class="form-control" asp-for="Title" />
        <span asp-validation-for="Title"></span>
    </div>
</div>
<input type="hidden" asp-for="GameList" value="@Model.GameList"/>
<div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
        <input type="submit" class="btn btn-success" value="Search" asp-action="LookupByTitle" />

    </div>
</div>
