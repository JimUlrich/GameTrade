@model GameTrade.ViewModels.AddGameViewModel

<div class="form-group">
    <label asp-for="Title" class="col-lg-2"></label>
    <div class="col-lg-10">
        <input class="form-control" asp-for="Title" />
        <span asp-validation-for="Title"></span>
    </div>
</div>

<div class="form-group">
    <label asp-for="PlatformId" class="col-lg-2"></label>
    <div class="col-lg-10">
        <select asp-for="PlatformId" class="form-control"
                asp-items="@(new SelectList(@ViewBag.Platforms,"Id", "Name"))"></select>
        <span asp-validation-for="PlatformId"></span>
    </div>
</div>

<div class="form-group">
    <label asp-for="Year" class="col-lg-2"></label>
    <div class="col-lg-10">
        <input class="form-control" asp-for="Year" />
        <span asp-validation-for="Year"></span>
    </div>
</div>
  
