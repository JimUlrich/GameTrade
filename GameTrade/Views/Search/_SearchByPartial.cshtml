@model GameTrade.ViewModels.SearchByViewModel


    <h3>@Model.Games.Count() game(s) found</h3>
<br />

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Platform</th>
            <th>Year</th>
            <th>GameCondition</th>
            <th>Value</th>
            <th>View</th>
        </tr>
    </thead>
   
    <tbody>
   @{foreach (var game in Model.Games)
    {

        <tr>
            <td>@game.Title</td>
            <td>@game.System</td>
            <td>@game.Year</td>
            <td>@game.GameCondition</td>
            <td>$@game.Value</td>
            <td><a href="/List/Game?id=@game.GameId" class="btn btn-success">View Game</a></td>
        </tr>
     }}
    </tbody>
</table>
