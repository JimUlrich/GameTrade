@model GameTrade.ViewModels.SearchByPlatformViewModel

<table class="table">

    <tr>
        <th>Title</th>
        <th>Platform</th>
        <th>Year</th>
        <th>GameCondition</th>
        <th>Value</th>

    </tr>

   @{foreach (var game in Model.Games)
    {
    <tr>
        <td>@game.Title</td>
        <td>@game.System</td>
        <td>@game.Year</td>
        <td>@game.GameCondition</td>
        <td>$@game.Value</td>
        </tr>
     }}
</table>
