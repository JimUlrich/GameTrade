@model Tuple<IEnumerable<Game>, string>

<div class="btn-group pull-right">
    <a href="#" class="btn btn-primary">Sort By</a>
    <a href="#" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><span class="caret"></span></a>
    <ul class="dropdown-menu">
        <li><a href="/List/UserList?sort=Title&userId=@Model.Item2">Title</a></li>
        <li><a href="/List/UserList?sort=Platform&userId=@Model.Item2">Platform</a></li>
        <li><a href="/List/UserList?sort=Year&userId=@Model.Item2">Release Date</a></li>
        <li><a href="/List/UserList?sort=Value&userId=@Model.Item2">Value</a></li>
    </ul>
</div>

<table class="table table-striped table-hover table-bordered">

    <tr>
        <th>Title</th>
        <th>Platform</th>
        <th>Year Released</th>
        <th>Condition</th>
        <th>Value</th>
        <th>Buy/Sell </th>
        <th> </th>

    </tr>

    @foreach (var game in Model.Item1)
    {
        <tr>
            <td>@game.Title</td>
            <td>@game.Platform.Name</td>
            <td>@game.Year</td>
            <td>@game.Condition.Name</td>
            <td>$@game.Value</td>
            <td>@game.Designation.Name</td>

            @{if (Model.Item2 == game.UserId)
                {
            <td><a asp-controller="List" class="btn btn-primary" asp-action="Edit" asp-route-id="@game.GameId">Edit</a></td>
                    }
                }
            <td><a asp-controller="List" class="btn btn-primary" asp-action="Game" asp-route-id="@game.GameId">View Game info</a></td>
        </tr>
    }
</table>

